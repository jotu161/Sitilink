<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D56B2"
    tools:context=".feedback">

    <RelativeLayout
        android:layout_width="338dp"
        android:layout_height="443dp"
        android:layout_margin="15dp"
        android:background="@drawable/border"
        android:backgroundTint="#CDDEFF"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_reg_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/feedback_st"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColorHighlight="#14279B"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="254dp"
            android:layout_height="47dp"
            android:layout_below="@id/tv_reg_head"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/border"
            android:indeterminateTint="#101D65"
            android:progressTint="#09066C"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/et_reg_review"
            android:layout_width="312dp"
            android:layout_height="109dp"
            android:layout_below="@id/ratingBar"
            android:layout_marginTop="-25dp"
            android:background="@drawable/border"
            android:hint="@string/your_review"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:lines="5"
            android:padding="6dp"
            android:textAlignment="center"
            android:textColorHint="#757575"
            android:textSize="16sp"
            tools:ignore="LabelFor,TextContrastCheck,TextContrastCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/send"
            android:layout_width="215dp"
            android:layout_height="57dp"
            android:layout_below="@id/et_reg_review"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/border"
            android:backgroundTint="#000957"
            android:text="@string/submit_feedback"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>