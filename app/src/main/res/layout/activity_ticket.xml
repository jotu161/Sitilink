<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D56B2"
    android:orientation="vertical"
    tools:context=".ticket">

    <RelativeLayout
        android:layout_width="377dp"
        android:layout_height="421dp"
        android:backgroundTint="#CDDEFF"
        android:background="@drawable/border"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_reg_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/search_route"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColorHighlight="#14279B"
            android:textSize="28sp"
            android:textStyle="bold" />

        <SearchView
            android:id="@+id/startstop"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_reg_head"
            android:layout_marginTop="13dp"
            android:searchIcon="@drawable/ic_ticloc"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border"
            app:layout_constraintBottom_toTopOf="@+id/endstop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <SearchView
            android:id="@+id/endstop"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:searchIcon="@drawable/ic_ticloc"
            android:layout_below="@id/startstop"
            android:background="@drawable/border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="159dp" />

        <Button
            android:id="@+id/generate"
            android:layout_width="138dp"
            android:layout_height="53dp"
            android:layout_below="@+id/endstop"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="114dp"
            android:layout_marginBottom="131dp"
            android:background="@drawable/border"
            android:backgroundTint="#000957"
            android:text="@string/generate"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="154dp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>